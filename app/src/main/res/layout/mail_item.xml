<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="com.coupleblog.fragment.MailItemBinding">

        <variable
            name="fragment"
            type="com.coupleblog.fragment.CB_MailBoxFragment" />

        <variable
            name="mailKey"
            type="String" />

        <variable
            name="mailData"
            type="com.coupleblog.model.CB_Mail" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mail_title_text_view"
            style="@style/normal_text_style"
            android:layout_width="200dp"
            android:text="@{mailData.strTitle}"
            tools:textColor="@color/blue"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingEnd="@dimen/margin_16dp"
            app:layout_constraintBottom_toBottomOf="@+id/sender_text_view"
            app:layout_constraintEnd_toStartOf="@+id/send_date_text_view"
            app:layout_constraintStart_toEndOf="@+id/heart_image_view"
            app:layout_constraintTop_toTopOf="@+id/send_date_text_view"
            tools:text="How to love you poonam" />

        <TextView
            android:id="@+id/send_date_text_view"
            style="@style/normal_text_style"
            bind:date_text="@{mailData.strSendDate}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingEnd="@dimen/margin_16dp"
            android:textAlignment="viewStart"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10 Oct 2021, 23:43"/>

        <ImageView
            android:id="@+id/checkbox_image_view"
            android:layout_width="@dimen/icon_image_size_small"
            android:layout_height="@dimen/icon_image_size_small"
            android:layout_marginStart="@dimen/normal_margin"
            android:src="@drawable/ic_baseline_check_box_outline_blank_24"
            app:layout_constraintBottom_toBottomOf="@+id/mail_title_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mail_title_text_view" />

        <TextView
            android:id="@+id/sender_text_view"
            style="@style/normal_text_style"
            bind:user_uid="@{mailData.strSenderUid}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/send_date_text_view"
            app:layout_constraintTop_toBottomOf="@+id/send_date_text_view"
            tools:text="Yumin Kim" />

        <ImageView
            android:id="@+id/heart_image_view"
            android:layout_width="@dimen/icon_image_size_small"
            android:layout_height="@dimen/icon_image_size_small"
            android:layout_marginStart="@dimen/normal_margin"
            tools:src="@drawable/ic_baseline_favorite_24"
            android:src="@{mailData.BHeartIcon ? @drawable/ic_baseline_favorite_border_24 : @drawable/ic_baseline_favorite_24}"
            app:tint="@color/purple"
            app:layout_constraintBottom_toBottomOf="@+id/mail_title_text_view"
            app:layout_constraintStart_toEndOf="@+id/checkbox_image_view"
            app:layout_constraintTop_toTopOf="@+id/mail_title_text_view" />

        <View
            style="@style/divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>