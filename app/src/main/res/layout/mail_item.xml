<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="com.coupleblog.fragment.MailItemBinding">

        <variable
            name="fragment"
            type="com.coupleblog.fragment.CB_MailBoxFragment" />

        <variable
            name="mailKey"
            type="String" />

        <variable
            name="mailData"
            type="com.coupleblog.model.CB_Mail" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/card_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="@{()->fragment.emailItem(mailData, mailKey)}">

            <ImageView
                android:id="@+id/checkbox_image_view"
                android:layout_width="@dimen/icon_image_size_small"
                android:layout_height="@dimen/icon_image_size_small"
                android:layout_marginStart="@dimen/normal_margin"
                android:src="@drawable/ic_baseline_check_box_outline_blank_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sender_text_view"
                style="@style/normal_text_style"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/normal_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:user_uid="@{mailData.strSenderUid}"
                tools:text="Yumin Kim" />

            <ImageView
                android:id="@+id/heart_image_view"
                android:layout_width="@dimen/icon_image_size_small"
                android:layout_height="@dimen/icon_image_size_small"
                android:layout_marginStart="@dimen/normal_margin"
                android:src="@{mailData.BHeartIcon ? @drawable/ic_baseline_favorite_border_24 : @drawable/ic_baseline_favorite_24}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/checkbox_image_view"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray"
                tools:src="@drawable/ic_baseline_favorite_border_24" />

            <TextView
                android:id="@+id/send_date_text_view"
                style="@style/normal_text_style"
                android:layout_width="@dimen/normal_field_size"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="@dimen/margin_16dp"
                android:paddingEnd="@dimen/margin_16dp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mail_title_text_view"
                bind:date_text="@{mailData.strSendDate}"
                tools:text="10 Oct 2021, 23:43" />

            <TextView
                android:id="@+id/mail_title_text_view"
                style="@style/normal_text_style"
                android:layout_width="@dimen/normal_field_size"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/margin_16dp"
                android:paddingEnd="@dimen/margin_16dp"
                android:text="@{mailData.strTitle}"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="How to love you"
                tools:textColor="@color/blue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</layout>