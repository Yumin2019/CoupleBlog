<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text_style">
        <item name="fontFamily">@font/lora_regular</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="subtitle_text_style">
        <item name="fontFamily">@font/lora_regular</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="normal_text_style">
        <item name="fontFamily">@font/lora_regular</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="post_title_text_view">
        <item name="fontFamily">@font/lora_regular</item>
        <item name="android:textSize">@dimen/post_title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="mtrl_button_style">
        <item name="android:text">@string/str_sign_in</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">@font/lora_regular</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="layout_constraintWidth_max">@dimen/button_max_length</item>
    </style>

    <style name="card_view_style">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="layout_constraintWidth_max">@dimen/button_max_length</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TitleStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/lora_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/lora_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darker_grey</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">100</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="MaterialDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- rounded border -->
        <item name="alertDialogStyle">@style/MaterialAlertDialogStyle</item>

        <!-- button styles -->
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle</item>

        <!-- text styles -->
        <item name="materialAlertDialogTitleTextStyle">@style/TitleStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="materialAlertDialogTitleIconStyle">@style/TitleIconStyle</item>

        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="TitleIconStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Icon" />

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialAlertDialogStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/RoundShapeAppearance</item>
        <item name="backgroundInsetStart">0dp</item>
        <item name="backgroundInsetEnd">0dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/ripple_grey</item>
        <item name="fontFamily">@font/lora_regular</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">@dimen/margin_24dp</item>
        <item name="android:paddingEnd">@dimen/margin_24dp</item>

        <!--in English always uppercase -->
        <item name="android:textAllCaps">false</item>

        <!-- rounded shape-->
        <item name="shapeAppearance">@style/RoundShapeAppearance</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/toolbarTextStyle</item>
        <item name="subtitleTextAppearance">@style/toolbarTextStyle</item>
    </style>

    <style name="toolbarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:fontFamily">@font/lora_regular</item>
    </style>

    <style name="toolbarMenuItemTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lora_regular</item>
    </style>

    <style name="tabTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lora_regular</item>
    </style>

</resources>
